<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/beige"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/song_linear_layout_hor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">



        <LinearLayout
            android:id="@+id/song_linear_layout_ver"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/song_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:text="@string/song_title" />

            <TextView
                android:id="@+id/song_author"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="@string/song_author" />
        </LinearLayout>

        <Button
            android:id="@+id/play_btn"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_weight="0"
            android:text="@string/play_btn"
            android:backgroundTint="@color/beige_200"
            android:contentDescription="@string/play_btn"
            tools:ignore="ImageContrastCheck" />

    </LinearLayout>
</androidx.cardview.widget.CardView>