<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CrossFade" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="button_style"  >
        <item name="android:textSize">30sp</item>
        <item name="android:layout_height">105dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:visibility">visible</item>
        <item name="android:fontFamily">@font/berkshire_swash</item>
    </style>
    <style name="Player_buttons" >
        <item name="android:background">@color/teal_200</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">2dp</item>

    </style>
</resources>